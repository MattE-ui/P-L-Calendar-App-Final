<Window x:Class="VeracityIbkrConnector.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Veracity IBKR Connector" Height="620" Width="700">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,12">
      <TextBlock Text="Veracity IBKR Connector" FontSize="20" FontWeight="Bold" />
      <TextBlock Text="Follow the steps below to connect the IBKR Client Portal Gateway." Foreground="#666" />
    </StackPanel>

    <ScrollViewer Grid.Row="1">
      <StackPanel Orientation="Vertical" Margin="0,0,0,12" >
        <GroupBox Header="1) Server settings" Margin="0,0,0,12">
          <StackPanel Margin="12">
            <TextBlock Text="Server URL" />
            <TextBox x:Name="ServerUrlBox" />
            <TextBlock Text="Gateway URL" Margin="0,8,0,0" />
            <TextBox x:Name="GatewayUrlBox" />
            <TextBlock Text="Poll seconds" Margin="0,8,0,0" />
            <TextBox x:Name="PollSecondsBox" />
          </StackPanel>
        </GroupBox>

        <GroupBox Header="2) Install IBKR Gateway" Margin="0,0,0,12">
          <StackPanel Margin="12">
            <TextBlock Text="Gateway download URL" />
            <TextBox x:Name="GatewayUrlDownloadBox" />
            <TextBlock Text="Install folder" Margin="0,8,0,0" />
            <TextBox x:Name="GatewayInstallPathBox" />
            <Button x:Name="DownloadGatewayButton" Content="Download and Install Gateway" Margin="0,8,0,0" Width="220" />
            <TextBlock x:Name="GatewayStatusText" Foreground="#666" Margin="0,6,0,0" />
          </StackPanel>
        </GroupBox>

        <GroupBox Header="3) Launch Gateway" Margin="0,0,0,12">
          <StackPanel Margin="12">
            <TextBlock Text="Launch the gateway, then login with IBKR credentials and 2FA." TextWrapping="Wrap" />
            <Button x:Name="LaunchGatewayButton" Content="Launch Gateway" Margin="0,8,0,0" Width="140" />
            <Button x:Name="OpenGatewayUiButton" Content="Open Gateway UI" Margin="0,8,0,0" Width="140" />
          </StackPanel>
        </GroupBox>

        <GroupBox Header="4) Paste connector token" Margin="0,0,0,12">
          <StackPanel Margin="12">
            <TextBlock Text="Generate a one-time token in the Profile â†’ IBKR Integration page." TextWrapping="Wrap" />
            <TextBox x:Name="TokenBox" Margin="0,8,0,0" />
            <Button x:Name="StartSyncButton" Content="Start Sync" Margin="0,8,0,0" Width="120" />
          </StackPanel>
        </GroupBox>

        <GroupBox Header="5) Status" Margin="0,0,0,12">
          <StackPanel Margin="12">
            <TextBlock x:Name="ConnectorStatusText" Text="Connector idle." />
          </StackPanel>
        </GroupBox>
      </StackPanel>
    </ScrollViewer>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button x:Name="SaveButton" Content="Save settings" Width="120" Margin="0,0,8,0" />
      <Button x:Name="CloseButton" Content="Close" Width="80" />
    </StackPanel>
  </Grid>
</Window>
